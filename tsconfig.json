{
  "compilerOptions": {
    "lib": [
      "ES2018",
      "DOM"
    ],
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2018",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules",
      "./@types/",
      "./types",
    ],
    "types": [
      "node",
      "truffle-typings",
      "@openzeppelin"
    ]
  },
}